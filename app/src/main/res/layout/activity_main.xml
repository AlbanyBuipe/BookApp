<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

    <Button
            android:text="@string/txt_reading_list_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnReadingList"
            android:background="#DCD2EC7A" android:textColor="#F8FFFFFF" android:textAlignment="center"
            android:textStyle="bold" android:textAllCaps="true" android:layout_marginTop="143dp"
            android:layout_marginBottom="52dp" app:layout_constraintEnd_toEndOf="@+id/btnAddBook"
            app:layout_constraintBottom_toTopOf="@+id/btnAddBook" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/btnAddBook"/>
    <Button
            android:text="@string/txt_add_book_btn"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:id="@+id/btnAddBook" android:textColor="#F9F9F9"
            android:background="#D2E986" app:layout_constraintTop_toBottomOf="@+id/btnReadingList"
            android:layout_marginBottom="298dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>